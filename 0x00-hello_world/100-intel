#include <stdio.h>

/**
 * main - generates assembly code from a C source file
 * Return: 0 if exited properly, non-zero otherwise
 */
int main(int argc, char *argv[])
{
    if (argc != 2) {
        printf("Usage: %s <source_file.c>\n", argv[0]);
        return (1);
    }

    char command[256];
    snprintf(command, sizeof(command), "gcc -S -masm=intel %s -o %s.s", argv[1], argv[1]);

    int result = system(command);
    if (result == 0) {
        printf("Assembly code generated: %s.s\n", argv[1]);
    } else {
        printf("Failed to generate assembly code.\n");
        return (1);
    }

    return (0);
}
