#!/bin/bash

# Ensure CFILE is set
if [ -z "$CFILE" ]; then
    echo "Please set the CFILE environment variable."
    exit 1
fi

# Generate assembly code
gcc -S -masm=intel "$CFILE" -o "${CFILE%.c}.s"

# Check if the generation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code generated: ${CFILE%.c}.s"
else
    echo "Failed to generate assembly code."
    exit 1
fi
